<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.wf.dao.MessageMapper" >
  <resultMap id="BaseResultMap" type="com.wf.bean.Message" >
    <id column="id" property="id" jdbcType="VARCHAR" />
    <result column="colums" property="colums" jdbcType="VARCHAR" />
    <result column="title" property="title" jdbcType="VARCHAR" />
    <result column="abstract" property="abstracts" jdbcType="VARCHAR" />
    <result column="content" property="content" jdbcType="VARCHAR" />
    <result column="link_address" property="linkAddress" jdbcType="VARCHAR" />
    <result column="create_time" property="createTime" jdbcType="VARCHAR" />
    <result column="author" property="author" jdbcType="VARCHAR" />
    <result column="organ_name" property="organName" jdbcType="VARCHAR" />
    <result column="branch" property="branch" jdbcType="VARCHAR" />
    <result column="image_url" property="imageUrl" jdbcType="VARCHAR" />
    <result column="human" property="human" jdbcType="VARCHAR" />
    <result column="stick" property="stick" jdbcType="VARCHAR" />
    <result column="issue_state" property="issueState" jdbcType="INTEGER" />
  </resultMap>
  <sql id="Base_Column_List" >
    id,colums,title,abstract,link_address,create_time,author,organ_name,content,branch,image_url,human,issue_state
  </sql>
  
  <!-- 查询学科分类信息 -->
  <select id="selectMessageInfor" resultMap="BaseResultMap" parameterType="java.util.Map">
    select * from message where 1=1
    	<if test="branch!=null">
    		and branch=#{branch}
    	</if>
    	<if test="human!=null">
    		and human=#{human}
    	</if>
    	<if test="colums!=null">
    		and colums=#{colums}
    	</if>
    	<if test="startTime!=null">
    		and create_time <![CDATA[ >= ]]> #{startTime} 
    	</if>
    	<if test="endTime!=null">
    		and create_time  <![CDATA[ <= ]]> #{endTime}
    	</if>
    	ORDER BY stick DESC
    	limit #{pageNum},#{pageSize}
  </select>
  
   <select id="selectMessageInforAll" resultMap="BaseResultMap" parameterType="java.util.Map">
    	select * from message where 1=1
    	<if test="branch!=null">
    		and branch=#{branch}
    	</if>
    	<if test="human!=null">
    		and human=#{human}
    	</if>
    	<if test="colums!=null">
    		and colums=#{colums}
    	</if>
    	<if test="startTime!=null">
    		and create_time <![CDATA[ >= ]]> #{startTime} 
    	</if>
    	<if test="endTime!=null">
    		and create_time <![CDATA[ <= ]]> #{endTime}
    	</if>
  	</select>
  <select id="findMessage" resultMap="BaseResultMap" parameterType="java.lang.String">
    select * from message where id=#{id}
  </select>
  
  <select id="findMessageParam" resultMap="BaseResultMap" parameterType="java.lang.String">
    select * from message where title=#{title}
  </select>
  	<!-- 根据类型查询 -->
  	<select id="selectBycolums" resultMap="BaseResultMap" parameterType="java.lang.String">
    select * from message where colums=#{colums} and issue_state=2 ORDER BY stick desc 
  </select>
  	<delete id="deleteMessage" parameterType="java.lang.String">
           delete from message where 
           <if test="_parameter !=null">
           		id in
           		<foreach collection="_parameter.split(',')"  open="(" close=")" separator="," item="item">  
					#{item}
				</foreach>
           </if> 
           <if test="_parameter==null">
           		1=2
           </if> 
          
   </delete>
   
    <insert id="insertMessage" parameterType="com.wf.bean.Message">
           insert into message(id,colums,title,abstract,link_address,create_time,author,organ_name,content,branch,image_url,human,issue_state,stick)
               values(#{id},#{colums}, #{title}, #{abstracts},#{linkAddress},#{createTime},#{author},#{organName},#{content},#{branch},#{imageUrl},
               #{human},#{issueState},#{stick})
   </insert>
   
   <update id="updateMessage" parameterType="com.wf.bean.Message">
   		update message SET colums=#{colums},title=#{title},abstract=#{abstracts},link_address=#{linkAddress},
   		author=#{author},organ_name=#{organName},content=#{content},image_url=#{imageUrl},branch=#{branch},human=#{human} where id=#{id}
   </update>
   
    <update id="updateMessageStick" parameterType="com.wf.bean.Message">
   		update message SET stick=#{stick} where id=#{id}
   </update>
   <update id="updateIssue" parameterType="java.util.Map">
   		update message SET issue_state=#{issueState},stick=#{stick} where id=#{id}
   </update>
</mapper>